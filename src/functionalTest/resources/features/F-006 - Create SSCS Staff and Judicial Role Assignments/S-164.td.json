{
  "_guid_": "S-164",
  "title": "must successfully create organisational role mapping for fee-paid judge with bookings when ticketCode=368",
  "_extends_": "F-006_Test_Data_Base",

  "method": "POST",
  "uri": "{{ROLE_ASSIGNMENT_URL}}/am/role-assignments/query",

  "specs": [
    "a judicial profile for SSCS that supports judicial bookings (i.e. ticketCode=368)",

    "contains the actorId of the user for which above booking is created",

    "contains a bookable fee-paid-judge role-assignment",
    "contains booked judge/fee-paid role-assignments"
  ],

  "users": {
    "invokingUser": {
      "_extends_": "AmJRDUser2"
    }
  },

  "request": {
    "headers": {
      "sort": "roleName",
      "direction": "ASC",
      "Content-Type": "application/vnd.uk.gov.hmcts.role-assignment-service.post-assignment-query-request+json;charset=UTF-8;version=2.0"
    },
    "body": {
      "queryRequests":[
        {
          "actorId": ["${[scenarioContext][testData][users][invokingUser][id]}"],
          "roleName": ["hmcts-judiciary"],
          "attributes": {
            "contractType": ["Fee-Paid"]
          }
        },
        {
          "actorId": ["${[scenarioContext][testData][users][invokingUser][id]}"],
          "attributes": {
            "jurisdiction": ["SSCS"]
          }
        }
      ]
    }
  },

