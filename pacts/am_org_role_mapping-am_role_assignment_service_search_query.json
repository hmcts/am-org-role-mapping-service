{
  "provider": {
    "name": "am_role_assignment_service_search_query"
  },
  "consumer": {
    "name": "am_org_role_mapping"
  },
  "interactions": [
    {
      "description": "RAS takes s2s/auth token and returns search query results",
      "request": {
        "method": "POST",
        "path": "/am/role-assignments/query",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "actorId": [
            234873
          ]
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/vnd.uk.gov.hmcts.role-assignment-service.post-assignment-query-request+json;charset=UTF-8;version=1.0"
        },
        "body": {
          "roleAssignmentResponse": [
            {
              "actorId": "234873",
              "roleName": "senior-tribunal-caseworker",
              "roleCategory": "STAFF",
              "readOnly": false,
              "attributes": {
                "primaryLocation": "500A2S",
                "jurisdiction": "IA"
              },
              "id": "14a21569-eb80-4681-b62c-6ae2ed069e6f",
              "roleType": "ORGANISATION",
              "classification": "PRIVATE",
              "grantType": "STANDARD",
              "actorIdType": "IDAM"
            }
          ]
        },
        "matchingRules": {
          "body": {
            "$.roleAssignmentResponse": {
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ],
              "combine": "AND"
            },
            "$.roleAssignmentResponse[*].id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.roleAssignmentResponse[*].attributes.jurisdiction": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.roleAssignmentResponse[*].attributes.primaryLocation": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "A list of role assignments for the search query"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.1.7"
    }
  }
}
