            "name": "judge",
            "description": "Judicial office holder able to do judicial case work",
            "label": "Judge - Sample role (Only for Testing)",
            "category": "JUDICIAL"
          },
          {
            "name": "tribunal-caseworker",
            "description": "Tribunal caseworker",
            "label": "Tribunal Caseworker",
            "category": "LEGAL_OPERATIONS"
          },
          {
            "name": "senior-tribunal-caseworker",
            "description": "Senior Tribunal caseworker",
            "label": "Senior Tribunal Caseworker",
            "category": "LEGAL_OPERATIONS"
          }
        ],
        "matchingRules": {
          "body": {
            "$[0].name": {
