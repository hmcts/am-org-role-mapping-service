  "interactions": [
    {
      "description": "RAS takes s2s/auth token and returns list of roles",
      "request": {
        "method": "GET",
        "path": "/am/role-assignments/roles"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/vnd.uk.gov.hmcts.role-assignment-service.get-roles+json;charset=UTF-8;version=1.0"
        },
        "body": [
